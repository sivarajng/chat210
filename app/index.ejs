<!DOCTYPE html>
<html>

<head>
  <% include ./partials/head.ejs %>
</head>

<body ng-app="chatApp" ng-controller="chatCtrl">

  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
      <a class="navbar-brand" href="#">Chat 210 : {{user}}</a>
     </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><a href="#">About</a></li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </nav>




  <div class="container" style="margin-top: 50px">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="text-center">
          <h2> {{welcomeMessage}} </h2>
        </div>
      </div>
        <div class="col-md-12 col-sm-12">
        <div class="text-center">
         
         <ul class="list-group ">
           <li class="list-group-item text-left" ng-class="user==msg.user ? 'list-group-item-danger' : 'list-group-item-success'" ng-repeat="msg in msgs">
              <p><b>{{msg.user}}</b> : <i>{{msg.time | date:'hh:mm:ss a dd-MM-yyyy'}}</i></p>
              <p>{{msg.message}}</p>
             </li>
          
         </ul>
         
        </div>
      </div>
    </div>
  </div>

  <footer class="navbar navbar-inverse navbar-fixed-bottom form-control">


    <form role="form">
      <div class="form-group" ng-show="user">
        <div class="input-group">
          <input ng-model="chatMessage" type="text" class="form-control" id="" placeholder="type message">
          <span class="input-group-btn"> <button ng-click="sendMessage()" type="submit" class="btn btn-primary form-control">Send</button></span>
          
        </div>
      </div>
            <div class="form-group" ng-show="!user">
        <div class="btn-group-justified">
          <div class="btn-group">
          <button ng-click="setUser('priya')" class="btn btn-success">I am Priya</button>
</div>
          <div class="btn-group">
          <button ng-click="setUser('siva')" class="btn btn-danger">I am Siva</button>
        </div>  
        </div>
      </div>
    </form>

    <!--<span style="color:white">Srish</span>-->
  </footer>

</body>

</html>